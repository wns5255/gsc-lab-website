    <!-- Page-only styles -->
    <style>
        /* ===== Research / Publications ===== */
        .pub-wrap{padding:90px 16px;}
        .pub-title{font-size:48px; font-weight:800; color:#0f294a; letter-spacing:.3px}
        .pub-section{margin-top:24px}
        .pub-section h3{
        font-style:italic; font-weight:800; font-size:32px; margin:10px 0 14px;
        }

        /* 좌우 2단: [좌] 그림 고정폭 + [우] 텍스트 가변폭 */
        .pub-row{
        display:grid;
        grid-template-columns: clamp(240px, 28vw, 340px) minmax(0,1fr);
        gap: 24px;
        align-items: start;
        }

        /* 그림 컬럼: 카드 느낌 + 비율 고정 */
        .pub-col-fig .fig{
        }
        .pub-col-fig .fig + .fig{margin-top:12px}

        /* 이미지: 박스 채우되 잘려 보이지 않게(contain) – 필요시 cover로 변경 */
        .pub-col-fig img{
        width:100%;
        height:60%;
        aspect-ratio: 16 / 9;
        object-fit: contain;
        display:block;
        }

        /* 리스트 타이포 */
        .pub-list{list-style:none; padding:0; margin:0}
        .pub-item{display:flex; gap:12px; margin:18px 0 22px}
        .pub-item .dot{
        width:8px; height:8px; border-radius:50%;
        background:#0f294a; margin-top:10px; flex:0 0 8px
        }
        .pub-item .content a{
        color:#1347c8; text-decoration:underline; text-underline-offset:2px;
        font-size:20px; line-height:1.35;
        }
        .pub-item .content a:hover{opacity:.85}
        .pub-item .authors{margin:6px 0 6px; color:#0f172a; font-size:16px}
        .pub-item .venue{font-weight:800; color:#0f172a; font-size:18px}
        .pub-item .venue .tag{font-weight:700; color:#b42318; margin-left:4px}

        /* 반응형: 태블릿부터 1단, 그림은 가운데 정렬 */
        @media (max-width: 992px){
        .pub-title{font-size:40px}
        .pub-row{
            grid-template-columns: 1fr;
            gap: 16px;
        }
        .pub-col-fig{max-width: 680px; margin: 0 auto;}
        }
    </style>
